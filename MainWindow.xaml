<Window x:Class="ClientLedger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientLedger"
        mc:Ignorable="d"
        Title="ClientLedger" Height="600" Width="1000"
        Background="#F9FAFB"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Navigation -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <StackPanel Background="#1E1E2F" Grid.Column="0">
            <TextBlock Text="ClientLedger"
                       Foreground="#00D1B2"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="20 30 10 20"
                       HorizontalAlignment="Left"/>

            <!-- Navigation Buttons -->
            <Button x:Name="DashboardBtn" Content="Dashboard" Style="{StaticResource NavButtonStyle}" Click="Dashboard_Click" IsEnabled="False"/>
            <Button x:Name="CustomersBtn" Content="Customers" Style="{StaticResource NavButtonStyle}" Click="Customers_Click" IsEnabled="False"/>
            <Button x:Name="WorkEntriesBtn" Content="Work Entries" Style="{StaticResource NavButtonStyle}" Click="WorkEntries_Click" IsEnabled="False"/>
            <Button x:Name="SettingsBtn" Content="Settings" Style="{StaticResource NavButtonStyle}" Click="Settings_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Main Content Area with Rounded Corners -->
        <Border Grid.Column="1" Margin="10" CornerRadius="12" Background="White">
            <Frame x:Name="MainFrame"
           NavigationUIVisibility="Hidden"
           Background="White"/>
        </Border>
    </Grid>
</Window>
