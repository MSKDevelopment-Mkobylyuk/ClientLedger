<Page x:Class="ClientLedger.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientLedger"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomersPage">

    <Border Background="#F4F6F8" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Customers" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#1E1E2F" 
                       Margin="0,0,0,15" />

            <!-- Customers DataGrid -->
            <DataGrid x:Name="CustomersDataGrid" 
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      Background="White"
                      RowBackground="#FFF"
                      AlternatingRowBackground="#F9F9F9"
                      BorderThickness="0"
                      Margin="0,0,0,10"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Category" Binding="{Binding CategorySummary}" Width="200" />
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalDisplay}" Width="150" />
                    <DataGridTextColumn Header="Total Remaining" Binding="{Binding TotalRemainingDisplay}" Width="150" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AddCustomerBtn" Content="Add Customer" Width="120" Margin="5" Background="#00D1B2" Foreground="White" FontWeight="Bold" Cursor="Hand" Click="AddCustomerBtn_Click"/>
                <Button x:Name="EditCustomerBtn" Content="Edit" Width="80" Margin="5" Background="#3B82F6" Foreground="White" FontWeight="Bold" Cursor="Hand" Click="EditCustomerBtn_Click"/>
                <Button x:Name="DeleteCustomerBtn" Content="Delete" Width="80" Margin="5" Background="#EF4444" Foreground="White" FontWeight="Bold" Cursor="Hand" Click="DeleteCustomerBtn_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>