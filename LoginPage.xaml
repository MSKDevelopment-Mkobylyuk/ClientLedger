<Page x:Class="ClientLedger.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ClientLedger"
      mc:Ignorable="d"
      Title="LoginPage">

    <Grid Background="#F4F6F8">
        <Border Width="350"
                Padding="30"
                Background="White"
                CornerRadius="12"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Welcome Back"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="#1E1E2F"/>

                <!-- Username -->
                <TextBlock Text="Username" Margin="0,0,0,5" Foreground="#666"/>
                <TextBox x:Name="UsernameBox"
                         Height="32"
                         Margin="0,0,0,15"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         Padding="5"
                         KeyDown="Input_KeyDown"/>

                <!-- Password -->
                <TextBlock Text="Password" Margin="0,0,0,5" Foreground="#666"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="32"
                             Margin="0,0,0,20"
                             BorderBrush="#ccc"
                             BorderThickness="1"
                             Padding="5"
                             KeyDown="Input_KeyDown"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessage"
                           Foreground="Red"
                           Visibility="Collapsed"
                           Margin="0,0,0,10"
                           FontSize="12"
                           TextWrapping="Wrap"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="36"
                        Background="#00D1B2"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Login_Click"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
