<Page x:Class="ClientLedger.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="#F4F6F8" Margin="20">
        <Border Background="White" Padding="20" CornerRadius="12" MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>

                <TextBlock Text="Settings" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1E1E2F"/>

                <!-- API Key Section -->
                <TextBlock Text="API Key" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox x:Name="ApiKeyTextBox" Height="32" Margin="0,0,0,20" BorderBrush="#ccc" BorderThickness="1" Padding="5"/>

                <!-- Save Button -->
                <Button Content="Save Changes"
                        Height="36"
                        Background="#00D1B2"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="SaveChanges_Click"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch"/>

                <!-- Status Message -->
                <TextBlock x:Name="StatusMessage" Foreground="Green" Visibility="Collapsed" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="12"/>

                <!-- Future settings placeholder -->
                <TextBlock Text="More settings coming soon..." Foreground="#999" FontStyle="Italic" Margin="0,30,0,0" HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
